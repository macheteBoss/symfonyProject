{% set items = data.items %}

<!--========== SLIDER ==========-->
{% if items|length > 0 %}
    <div id="{{ getValidCodeBlock(data.entity.name) }}" class="carousel slide" data-ride="carousel">
        <div class="container">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                {% for i in items|keys %}
                    <li data-target="#{{ getValidCodeBlock(data.entity.name) }}" data-slide-to="{{ i }}"{% if i == 0 %} class="active"{% endif %}></li>
                {% endfor %}
            </ol>
        </div>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            {% for item in items %}
                <div class="item{% if loop.first %} active{% endif %}">
                    <img class="img-responsive" src="{{ asset(item.imageUrl) }}" alt="Slider Image">
                    <div class="container">
                        <div class="carousel-centered">
                            <div class="margin-b-40">
                                <h2 class="carousel-title">{{ item.title }}</h2>
                                <p class="color-white">{{ item.description }}</p>
                            </div>
                            {% if item.button %}
                                <p class = "js_nav-item"><a href="{{ item.urlButton }}" class="btn-theme btn-theme-sm btn-white-brd text-uppercase">{{ item.titleButton }}</a></p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
<!--========== END SLIDER ==========-->